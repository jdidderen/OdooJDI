<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_set_view_form" model="ir.ui.view">
        <field name="name">res.partner.set.view.form</field>
        <field name="model">res.partner.set</field>
        <field name="arch" type="xml">
            <form string="Set Partners">
                <group >
                    <field name="is_company"/>
                    <field name="customer"/>
                    <field name="supplier"/>
                </group>
                <footer>
                    <button name="set_partners" type="object" string="Set Partners" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="res_partner_set_view_action" model="ir.actions.act_window">
        <field name="name">Set Partners</field>
        <field name="res_model">res.partner.set</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="res_partner_set_view_form"/>
        <field name="target">new</field>
    </record>

    <act_window
            id="action_res_partner_set"
            name="Set Partners"
            multi="True"
            key2="client_action_multi"
            res_model="res.partner.set"
            src_model="res.partner"
            view_mode="form"
            target="new"
            view_type="form" />
</odoo>