<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="invoice_supplier_belfius_import_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.belfius.import.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="banking_receipt"/>
                <field name="transaction_number"/>
            </xpath>
        </field>
    </record>
    <record id="invoice_belfius_import_form" model="ir.ui.view">
        <field name="name">account.invoice.belfius.import.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="banking_receipt"/>
                <field name="transaction_number"/>
            </xpath>
        </field>
    </record>
</odoo>